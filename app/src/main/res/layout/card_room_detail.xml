<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_rt_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                app:layout_anchorGravity="center"
                app:layout_constraintEnd_toStartOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/tv_rt_name"
                tools:background="@drawable/test_roomtype_img" />

            <TextView
                android:id="@+id/tv_rt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="房型名称" />

            <TextView
                android:id="@+id/tv_rt_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="28dp"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView29"
                app:layout_constraintTop_toBottomOf="@+id/iv_rt_img"
                tools:text="面积" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="面积"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_area"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="床型"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_bedtype"
                app:layout_constraintStart_toStartOf="@+id/textView29" />

            <TextView
                android:id="@+id/tv_rt_facility"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                tools:text="客房设施客房设施客房设施客房设施客房设施客房设施客房设施客房设施" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="客房设施："
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_facility"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="浴　　室："
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_shower"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_rt_shower"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView25"
                tools:text="浴　　室浴　　室浴　　室浴　　室浴　　室浴　　室浴　　室浴　　室浴　　室浴　　室浴　　室" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="食品饮料："
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_fd"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_rt_fd"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                tools:text="食品饮料食品饮料食品饮料食品饮料食品饮料" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="媒体科技："
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_media"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_rt_media"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                tools:text="媒体科技媒体科技" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="可住"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼层"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/tv_rt_bedtype" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/tv_rt_maxperson"
                app:layout_constraintTop_toTopOf="@+id/tv_rt_maxperson" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="可入住"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平米"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_rt_area"
                app:layout_constraintStart_toEndOf="@+id/tv_rt_area" />

            <TextView
                android:id="@+id/tv_rt_bedtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="17dp"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/tv_rt_area"
                tools:text="床型" />

            <TextView
                android:id="@+id/tv_rt_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView20"
                tools:text="楼层" />

            <TextView
                android:id="@+id/tv_rt_maxperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                tools:text="2" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                app:layout_constraintBottom_toTopOf="@+id/tv_rt_facility"
                app:layout_constraintEnd_toEndOf="@+id/tv_rt_facility"
                app:layout_constraintStart_toStartOf="@+id/textView25"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>