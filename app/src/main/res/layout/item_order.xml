<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_hotel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hotel" />

            <TextView
                android:id="@+id/tv_hotel_name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:singleLine="true"
                android:textColor="#2c2c2c"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/image_hotel"
                app:layout_constraintStart_toEndOf="@+id/image_hotel"
                app:layout_constraintTop_toTopOf="@+id/image_hotel"
                tools:text="哈哈哈哈大酒店" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:textColor="#FB824E"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_hotel_name"
                tools:text="￥999.0" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="已确认"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_price"
                app:layout_constraintStart_toStartOf="@+id/tv_price"
                app:layout_constraintTop_toBottomOf="@+id/tv_price" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_hotel_name"
                app:layout_constraintStart_toStartOf="@+id/tv_hotel_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_hotel_name"
                tools:text="这是一连串址地" />

            <TextView
                android:id="@+id/tv_roomTypeName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:maxEms="8"
                android:singleLine="true"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/tv_address"
                app:layout_constraintTop_toBottomOf="@+id/tv_address"
                tools:text="豪华房豪华房豪华房豪华房" />

            <TextView
                android:id="@+id/tv_roomNum"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/tv_roomTypeName"
                app:layout_constraintTop_toTopOf="@+id/tv_roomTypeName"
                tools:text="3间" />


            <TextView
                android:id="@+id/tv_checkIn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/tv_address"
                app:layout_constraintTop_toBottomOf="@+id/tv_roomTypeName"
                tools:text="2020/1/1" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="—"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/tv_checkIn"
                app:layout_constraintTop_toTopOf="@+id/tv_checkIn" />

            <TextView
                android:id="@+id/tv_checkOut"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="20201/1/3"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                tools:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/btn_rebook"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_btn"
                android:text="再预订"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_status" />

            <Button
                android:id="@+id/btn_comment"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_btn"
                android:text="评 价"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/btn_rebook"
                app:layout_constraintEnd_toStartOf="@+id/btn_rebook"
                app:layout_constraintTop_toTopOf="@+id/btn_rebook" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>