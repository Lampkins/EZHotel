<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <TextView
        android:id="@+id/tv_hotelName"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="7"
        android:singleLine="true"
        android:text="酒店名称"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="365dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hotelName">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="房间信息"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#C57777"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/tv_roomType"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="房　　型："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/tv_roomTypeName"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="我是房型"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_roomType"
                app:layout_constraintStart_toEndOf="@+id/tv_roomType"
                app:layout_constraintTop_toTopOf="@+id/tv_roomType"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="房间数量："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/tv_roomNum"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_sub"
                app:layout_constraintStart_toEndOf="@+id/iv_sub"
                app:layout_constraintTop_toTopOf="@+id/iv_sub" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="每日价格："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_roomType"
                app:layout_constraintTop_toBottomOf="@+id/tv_roomType" />

            <TextView
                android:id="@+id/tv_price_of_day"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:text="88元"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <ImageView
                android:id="@+id/iv_sub"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="32dp"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv1"
                app:layout_constraintStart_toEndOf="@+id/tv1"
                app:layout_constraintTop_toTopOf="@+id/tv1"
                app:srcCompat="@drawable/sub" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_roomNum"
                app:layout_constraintStart_toEndOf="@+id/tv_roomNum"
                app:layout_constraintTop_toTopOf="@+id/tv_roomNum"
                app:srcCompat="@drawable/add" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="365dp"
        android:layout_height="270dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView7"
        app:layout_constraintTop_toBottomOf="@+id/cardView7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="入住信息"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#C57777"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/tv_fullName"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="姓　　名："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <EditText
                android:id="@+id/et_fullName"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:hint="填写入住人姓名"
                android:inputType="textPersonName"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tv_fullName"
                app:layout_constraintTop_toTopOf="@+id/tv_fullName" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="电话号码："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_fullName"
                app:layout_constraintTop_toBottomOf="@+id/tv_fullName" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:hint="填写电话号码"
                android:inputType="phone"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tv_phone"
                app:layout_constraintTop_toTopOf="@+id/tv_phone" />

            <TextView
                android:id="@+id/tv_check1"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="入住日期："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_phone"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

            <TextView
                android:id="@+id/tv_checkIn"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:hint="点击设置"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tv_check1"
                app:layout_constraintTop_toTopOf="@+id/tv_check1" />

            <TextView
                android:id="@+id/tv_check2"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="退房日期："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_check1"
                app:layout_constraintTop_toBottomOf="@+id/tv_check1" />

            <TextView
                android:id="@+id/tv_checkOut"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:hint="点击设置"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tv_check2"
                app:layout_constraintTop_toTopOf="@+id/tv_check2" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="备注信息："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_check2"
                app:layout_constraintTop_toBottomOf="@+id/tv_check2" />

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:gravity="center"
                android:hint="可填写入住需求"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_remark"
                app:layout_constraintStart_toEndOf="@+id/tv_remark"
                app:layout_constraintTop_toTopOf="@+id/tv_remark" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="支付信息"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#C57777"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="订单总价："
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="8888.0"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />


            <Button
                android:id="@+id/btn_pay"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_btn2"
                android:gravity="center"
                android:text="支付"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="元"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                app:layout_constraintStart_toEndOf="@+id/tv_price"
                app:layout_constraintTop_toTopOf="@+id/tv_price" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>